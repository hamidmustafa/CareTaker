<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="caretaker.caretaker.MainActivity_CareTaker"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_Doctor_image"
        android:src="@drawable/logoheart"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Care Taker on your smart phone"
        android:id="@+id/textView_nav_email"
        android:textColor="#171414"
        android:textSize="17dp"
        android:layout_below="@+id/imageView_Doctor_image"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewDoctor"
        android:src="@drawable/doctor"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView_Doctor_image"
        android:layout_toStartOf="@+id/imageView_Doctor_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you a Patient?"
        android:id="@+id/textView2"
        android:textSize="15dp"
        android:layout_alignTop="@+id/textViewPatient"
        android:layout_alignLeft="@+id/imageViewPatient"
        android:layout_alignStart="@+id/imageViewPatient" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewPatient"
        android:src="@drawable/patient"
        android:layout_alignTop="@+id/imageViewDoctor"
        android:layout_alignRight="@+id/textView_nav_email"
        android:layout_alignEnd="@+id/textView_nav_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you a Doctor?"
        android:id="@+id/textViewPatient"
        android:textSize="15dp"
        android:layout_below="@+id/imageViewDoctor"
        android:layout_alignLeft="@+id/imageViewDoctor"
        android:layout_alignStart="@+id/imageViewDoctor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We really care you !"
        android:id="@+id/textView6"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="15dp" />

</RelativeLayout>
