<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="caretaker.caretaker.Login_Patient">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="caretaker.caretaker.Login_Doctor">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_Doctor_image"
            android:src="@drawable/patient"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I &apos;m a Patient"
            android:id="@+id/textView2"
            android:layout_below="@+id/imageView_Doctor_image"
            android:layout_centerHorizontal="true"
            android:textSize="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText_registeredemail"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:hint="Email" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText_password"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:hint="******" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register?"
            android:id="@+id/textView_RegisterDoctor"
            android:textSize="15dp"
            android:clickable="true"
            android:contextClickable="true"
            android:layout_above="@+id/textView_ForgotPassword"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:id="@+id/textView_ForgotPassword"
            android:textSize="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginBottom="52dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login as a patient"
            android:id="@+id/button"
            android:textAllCaps="false"
            android:layout_below="@+id/editText_password"
            android:layout_alignRight="@+id/editText_password"
            android:layout_alignEnd="@+id/editText_password"
            android:layout_alignLeft="@+id/editText_password"
            android:layout_alignStart="@+id/editText_password"
            android:background="#00BCD4"
            android:textColor="#ffffff" />

    </RelativeLayout>



</RelativeLayout>
