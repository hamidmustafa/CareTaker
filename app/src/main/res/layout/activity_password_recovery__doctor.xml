<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="caretaker.caretaker.PasswordRecovery_Doctor">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="caretaker.caretaker.Login_Doctor">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_Doctor_image"
            android:src="@drawable/doctor"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Password Recovery "
            android:id="@+id/textView2"
            android:layout_below="@+id/imageView_Doctor_image"
            android:layout_centerHorizontal="true"
            android:textSize="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText_registeredemail"
            android:hint="Registered Email"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email me the password"
            android:id="@+id/btn_registeredemail"
            android:textAllCaps="false"
            android:background="#00BFFF"
            android:textColor="#ffffff"
            android:layout_below="@+id/editText_registeredemail"
            android:layout_alignRight="@+id/editText_registeredemail"
            android:layout_alignEnd="@+id/editText_registeredemail"
            android:layout_marginTop="51dp"
            android:layout_alignLeft="@+id/editText_registeredemail"
            android:layout_alignStart="@+id/editText_registeredemail" />

    </RelativeLayout>
</RelativeLayout>
